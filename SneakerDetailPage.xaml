<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SneakerLocalMaui.SneakerDetailPage"
             Title="SneakerDetailPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!-- Add a Frame around the Image -->
        <Frame
            Padding="5"
            WidthRequest="200"
            HeightRequest="200"
            CornerRadius="10"
            BorderColor="Black"
            HasShadow="True">
            <Image 
                Source="{Binding SneakerPic}"
                Aspect="AspectFill" />
        </Frame>
        <Label 
            Text="{Binding Description}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!-- Add more labels or controls to display additional details about the sneaker -->
    </VerticalStackLayout>
</ContentPage>
